<h1>Register Here</h1>

<%= form_for(@user, url: registrations_path(@user)) do |f| %>
  
  <div class="form_fields"> 
    <%=f .label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form_fields"> 
    <%=f .label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="form_fields">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div class="form_fields">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Register User" %>

<% end %>
